---
import { getClangId } from '@helpers/properties-management/server-properties';
import ModuleList from './ModuleList.astro';
import { getFooterArticle } from '@adapters/kreatif-redaxo-adapter/footer-article';
import type { Article } from '@adapters/redaxo/@types';

interface Props {
    article: Article;
}

const { article } = Astro.props;
const clangId = getClangId(Astro);
const footerArticle = await getFooterArticle(clangId);
---

<main class="pt-16 md:pt-20 xl:pt-[120px]">
    <ModuleList article={article} />
    {footerArticle && <ModuleList article={footerArticle} />}
</main>
