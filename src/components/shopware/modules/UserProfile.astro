---
import {
    getCustomer,
    getShopwareInstance,
} from '@helpers/properties-management/server-properties';
import { getAvailableSalutations } from '@shopware-pwa/shopware-6-client';
import UserMenu from '../atoms/UserMenu';
import ChangeProfile from '../utils/ChangeProfile';

const customer = getCustomer(Astro);
---

<div class="row mt-5 mb-5">
    <div class="flex w-full flex-row flex-wrap">
        <div class="w-[20%] pb-20">
            <h2 class="mb-5 border-b pb-2 font-bold">
                Hallo,
                {customer.firstName}
                {customer.lastName}
            </h2>
            <UserMenu />
        </div>
        <div class="w-[80%] pl-20">
            <h1 class="font-bold">Persönliches Profil</h1>
            <p>Überprüfen Sie Ihre persönlichen Daten.</p>

            <ChangeProfile client:only="preact" />
        </div>
    </div>
</div>
