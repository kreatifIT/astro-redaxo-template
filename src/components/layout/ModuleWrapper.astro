---
import KModuleWrapper from '@kreatif/starter/components/layout/KModuleWrapper.astro';
import type { Article, ArticleSlice } from 'redaxo-adapter';
interface Props {
    slice: ArticleSlice;
    isFooterModule?: boolean;
    article?: Article;
}

const props = Astro.props;
const { slice, isFooterModule, article } = props;
const moduleClass = 'module-' + slice.moduleCode;
---

<KModuleWrapper {...props} class={moduleClass}>
    <slot />
</KModuleWrapper>
