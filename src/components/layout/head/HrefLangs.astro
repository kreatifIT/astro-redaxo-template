---
import type { Clang } from 'redaxo-adapter';
import { getFullUrl } from '@helpers/url';

interface Props {
    clangs: Clang[];
}
const { clangs } = Astro.props;
---

<link rel="alternate" hreflang="x-default" href={getFullUrl(clangs[0]!.url)} />
{
    clangs.length > 0 &&
        clangs.map((elem) => (
            <link
                rel="alternate"
                hreflang={elem.code}
                href={getFullUrl(elem.url)}
            />
        ))
}
