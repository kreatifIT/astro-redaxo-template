---
import type { Link } from 'redaxo-adapter';
import type { ModuleProps } from '@config/modules';
import Container from '@layout/Container';
import TitleText from '@molecules/TitleText';

interface Props extends ModuleProps {}

interface Values {
    1: {
        title_large: string;
        title_small: string;
        text: string;
        link: Link;
    };
}

const { slice } = Astro.props;

const values = slice.values as Values;
---

<Container>
    <TitleText {...values[1]} />
</Container>
