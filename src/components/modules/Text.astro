---
import type { Link } from 'redaxo-adapter';
import Container from '@utils/grid/Container.astro';
import RexLink from '@utils/RexLink';
import Button from '@utils/Button';
import RichText from '@utils/rich-text/RichText';
import type { ModuleProps } from '@helpers/@types';
import Heading from '@utils/heading/Heading';

interface Props extends ModuleProps {}

interface Values {
    1: {
        title_large: string;
        title_small: string;
        text: string;
        link: Link;
    };
}

const { slice } = Astro.props;

const values = slice.values as Values;
const link = values[1].link;
---

<Container>
    <Heading size="large" text={values[1].title_large} />
    <Heading size="tiny" text={values[1].title_small} />
    {values[1].text && <RichText text={values[1].text} class="text my-2" />}
    <RexLink link={link} />
    <!-- <Button link={link} /> -->
</Container>
