---
import type { Link, ModuleProps } from '@adapters/redaxo/@types';
import Container from '@utils/grid/Container.astro';
import Heading from '@utils/heading/Heading';
import RexLink from '@utils/RexLink';
import RichText from '@utils/rich-text/RichText';

interface Props extends ModuleProps {}

interface Values {
    1: {
        title_large: string;
        title_small: string;
        text: string;
        lead: string;
        link: Link;
    };
}

const { slice } = Astro.props;

const values = slice.values as Values;
console.log(values);
---

<Container>
    <Heading text={values[1].title_large} class="text-2xl font-bold" />
    <Heading text={values[1].title_small} class="text-xl font-bold" />
    {values[1].lead && <RichText text={values[1].lead} class="my-2 text-lg" />}
    {values[1].text && <RichText text={values[1].text} class="text my-2" />}
    <RexLink link={values[1].link} />
</Container>
