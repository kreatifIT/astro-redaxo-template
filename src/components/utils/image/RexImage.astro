---
import { getClangId } from '@helpers/properties-management/server-properties';
import Image from './Image';
import { getMedia } from '@adapters/redaxo/media';

interface Props {
    media: string;
    imageType: string;
    contain?: boolean;
    class?: string;
}

const { media, imageType, contain, class: className = '' } = Astro.props;

const clangId = getClangId(Astro);

const mediaObj = await getMedia(media, imageType, clangId);
---

<Image {...mediaObj} contain={contain} class={className} />
