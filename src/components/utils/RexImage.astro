---
import { RedaxoAdapter } from '@adapters/redaxo';
import { getAllProperties } from '@helpers/properties-management/server-properties';
import Image from '@utils/Image';

interface Props {
    media: string;
    imageType: string;
    contain?: boolean;
    class?: string;
}

const allStates = getAllProperties(Astro);

const { media, imageType, contain, class: className = '' } = Astro.props;

const mediaObj = await RedaxoAdapter.getMedia(
    media,
    imageType,
    allStates.clangId,
);
---

<Image {...mediaObj} contain={contain} class={className} />
