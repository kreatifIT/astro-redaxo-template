{
    "extends": "astro/tsconfigs/strict",
    "compilerOptions": {
        "baseUrl": "src/",
        "paths": {
            "@layout/*": ["components/layout/*"],
            "@modules/*": ["components/modules/*"],
            "@atoms/*": ["components/atoms/*"],
            "@utils/*": ["components/utils/*"],
            "@components/*": ["components/*"],
            "@adapters/*": ["adapters/*"],
            "@styles/*": ["styles/*"],
            "@config/*": ["config/*"],
            "@layouts/*": ["layouts/*"],
            "@contents/*": ["contents/*"]
        },
        "jsx": "react-jsx",
        "jsxImportSource": "preact"
    }
}
